@page "{sqlauthparamsrv}/{sqlauthparamusr}"
@using Sorling.SqlConnAuthWeb;
@model Sorling.SqlConnAuthWeb.areas.sqlconnauth.pages.ConnectModel
@{
    ViewData["Title"] = "Sign in";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-3">
        <form method="post">
            @if (Model.IsWinAuth)
            {
                <p>Sign in to the SQL server @Model!.Input!.SqlServer using Windows authentication.</p>
            }
            else
            {
                <p>Sign in to the SQL server @Model!.Input!.SqlServer with user name @Model!.Input!.UserName</p>
            }            
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Input!.SqlServer" hidden>
            <input asp-for="Input!.UserName" hidden>
            <div class="form-group">
                @if (Model.IsWinAuth)
                {
                    <input hidden type="text" name="Input.Password" value="@SqlConnAuthConsts.WINDOWSAUTHENTICATION">
                }
                else
                {
                    <label asp-for="Input!.Password"></label>
                    <input asp-for="Input!.Password" class="form-control" autofocus>
                }
                <span asp-validation-for="Input!.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </form>
    </div>
</div>
